
@{
    ViewBag.Title = "Registrar_Producto";
    Layout = "~/Views/Main.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Registrar Productos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Registrar Productos</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Registrar</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            @if (ViewBag.message != null)
            {
                <div class="alert alert-dark" role="alert">
                    @ViewBag.message
                </div>
            }

            @model List<Web_Farmacia.Clases.Categoria>

            <form method="post" @*action="/Producto/Registrar_Producto"*@ enctype="multipart/form-data" id="Registrar">

                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label for="nombre">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ingrese su Nombre" required>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="categoria">Categoria</label>
                        <select class="form-control" name="categoria" id="categoria">
                            @foreach (var categoria in Model)
                            {
                                <option value="@categoria.Id_categoria">@categoria.Nombre</option>
                            }
                            
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="precio">Precio</label>
                        @*Validar que solo se acepten puntos en el campo*@
                        <input class="form-control" type="text" name="precio" id="precio" placeholder="S/. 0.00" required/>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="stock">Stock</label>
                        <input class="form-control" type="number" name="stock" id="stock" placeholder="Ingrese la Cantidad" required>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="codigo">Codigo</label>
                        <input class="form-control" type="text" name="codigo" id="codigo" placeholder="Ingrese su Codigo" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-8">
                        <label for="descripcion">Descripcion</label>
                        <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Ingrese su Descripción" required>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="imagen">Imagen</label>
                        <input class="form-control" type="file" name="imagen" id="imagen" placeholder="Seleccione su Imagen">
                    </div>
                </div>

                <div class="form-row d-flex justify-content-between">
                    <div class="form-group col-auto">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                    <div class="form-group col-sm-4">
                        <img id="img-up" src="" alt="" class="img-thumbnail">
                    </div>
                </div>

            </form>



        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Paginación
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

<script>

    document.addEventListener("DOMContentLoaded",function(){

        document.getElementById("Registrar").addEventListener("submit", function (e) {

            var url = "@Url.Action("Registrar_Producto", "Producto")"/*"/Producto/Registrar_Producto"*/;

            var form = document.getElementById("Registrar");
            var formdata = new FormData(form);

            var ajax = new XMLHttpRequest();

            ajax.onreadystatechange = function () {
                if (ajax.readyState == 4) {
                    
                    console.log(JSON.parse(ajax.responseText));

                    var response = JSON.parse(ajax.responseText);
                    if (response.success) {
                        console.log(response.message);
                    }
                }
            }

            ajax.open("POST", url, true);
            ajax.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            ajax.send(formdata);

            e.preventDefault();
        })

        function readFile(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    var filePreview = document.createElement('img');
                    filePreview.id = 'file-preview';
                    filePreview.src = e.target.result;
                    //console.log(e.target.result);

                    var previewZone = document.getElementById('img-up');
                    previewZone.src = filePreview.src;
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        var fileUpload = document.getElementById('imagen');
        fileUpload.onchange = function (e) {
            readFile(e.srcElement);
        }

    })

</script>



